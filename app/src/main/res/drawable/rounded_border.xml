<!-- res/drawable/rounded_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
    <stroke
        android:color="@color/gray"
        android:width="2dp"/> <!-- Border thickness and color -->
    <corners android:radius="12dp"/> <!-- Rounded corners -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp"/> <!-- Padding inside the border -->
</shape>
